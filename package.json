{
  "name": "regexp-worker",
  "version": "3.0.0",
  "description": "Runs regular expressions on a background thread.",
  "type": "module",
  "module": "lib/index.mjs",
  "types": "lib/index.d.mts",
  "scripts": {
    "clean": "shx rm -rf lib coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "npm run lint:fix:eslint && npm run lint:fix:prettier",
    "lint:fix:eslint": "eslint . --fix",
    "lint:fix:prettier": "prettier --write .",
    "build": "npm run compile",
    "clean-build": "npm run clean && npm run build",
    "coverage": "vitest run --coverage",
    "prepublish": "npm run clean-build",
    "prepublishOnly": "npm run test-all",
    "compile": "tsc -p .",
    "watch": "tsc --watch -p .",
    "release": "npx standard-version",
    "release-alpha": "npm release -- -p alpha",
    "tsc": "tsc -p .",
    "test-watch": "vitest",
    "test": "npm run build && vitest run"
  },
  "exports": {
    ".": {
      "import": "./lib/index.mjs"
    }
  },
  "engines": {
    "node": ">= 20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/streetsidesoftware/regexp-worker.git"
  },
  "keywords": [
    "regexp",
    "regular",
    "expression",
    "node",
    "worker",
    "thread"
  ],
  "author": "Jason Dent",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/streetsidesoftware/regexp-worker/issues"
  },
  "files": [
    "index.js",
    "lib",
    "!**/*.test.*",
    "!**/*.map"
  ],
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@tsconfig/node20": "^20.1.6",
    "@types/node": "^18.19.103",
    "cross-env": "^7.0.3",
    "eslint": "^9.27.0",
    "globals": "^16.1.0",
    "lorem-ipsum": "^2.0.8",
    "prettier": "^3.5.3",
    "shx": "^0.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.2.3"
  },
  "homepage": "https://github.com/streetsidesoftware/regexp-worker#readme"
}
