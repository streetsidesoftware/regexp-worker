{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": true,
		"alwaysStrict": true,
        "declaration": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"strictFunctionTypes": false,
		"noUnusedLocals": true,
		"outDir": "./lib",
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"./src"
	]
}
