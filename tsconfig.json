{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noUnusedLocals": true,
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src"]
}
